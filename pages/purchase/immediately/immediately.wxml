<swiper class='img-swiper' indicator-dots="{{indicatorDots}}" indicator-active-color='{{indicatorActivColor}}' autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
    <!-- <block wx:for="{{imgUrls}}" wx:key>
    <swiper-item>
      <image mode='aspectFit' src="{{item}}" class="slide-image" />
    </swiper-item>
  </block> -->
    <swiper-item>
        <image mode='aspectFill' src="{{activityInfo.imgUrl}}" class="slide-image" />
    </swiper-item>
</swiper>
<view class='goodInfoBox'>
    <view class='infoLeft'>
        <text class='pintuan'>拼团</text>
        <text>{{activityInfo.ptGood.name}}</text>
        <view class='priceBox'>
            <view class='priceLeft'>
                ￥
                <text class='text'>{{activityInfo.ptGood.price}}</text>
            </view>
            <view class='priceRight'>
                <text class='text'>原价￥{{activityInfo.ptGood.originalPrice}}</text>
                <text class='text'>已售{{activityInfo.saleNum}}</text>
            </view>
        </view>
    </view>
    <image class='triangle' src='{{triangleImg}}'></image>
    <view class='infoRight'>
        <text class='text'>距离结束还剩</text>
        <text class='text'>{{timeCountDown}}</text>
    </view>
</view>
<view class='contactInfo'>
    <view class='left'>
        <view class='contact'>
            <image class='house' src='{{house}}'></image>
            <text class='text'>{{activityInfo.storeName}}</text>
        </view>
        <view class='contact'>
            <image class='addr' src='{{addr}}'></image>
            <text class='text'>{{activityInfo.merchantAddress}}</text>
        </view>
    </view>
    <view data-tel="{{activityInfo.storePhone}}" bindtap='calling' class='right'>
        <image src='../../../images/pintuan/phone.png' class='phone'></image>
    </view>
</view>
<view class='menbers' wx-if="{{menbers.length}}">
    <view class='titleBox'>
        <text class='title'>拼团人员</text>
    </view>
    <view class='menber' wx:for="{{menbers}}" wx:key>
        <image class='face' src='{{item.imgUrl}}'></image>
        <text class='text'>{{item.name}}</text>
        <text class='text'>{{item.time}}</text>
    </view>
</view>
<view class='menbers'>
    <view class='titleBox'>
        <text class='title'>消费提醒</text>
    </view>
    <view class='tips'>
        <view class='tip'>1. 有效期：{{activityInfo.beginTime}} 至{{activityInfo.endTime}}</view>
        <view class='tip'>2. 活动仅限高端客户</view>
        <view class='tip'>3. 需到店消费</view>
    </view>
</view>
<view class='footer' wx:if="{{!friendInvite}}">
    <view class='left'>
        再邀
        <text>{{activityInfo.count-activityInfo.groupNum}}</text>人购买即可享受优惠
    </view>
    <navigator url='../pay/pay?actid={{activityInfo.id}}&name={{activityInfo.ptGood.name}}&price={{activityInfo.ptGood.price}}&inviteId={{inviteId}}&userId={{userId}}' class='right'>立即抢购</navigator>
</view>
<view class='footer' wx:if="{{friendInvite}}">
    <view class='left'>
        再邀
        <text>{{activityInfo.count-activityInfo.groupNum}}</text>人购买即可享受优惠
    </view>
    <button class='right sharebtn' open-type="share" type="default">邀请好友拼团</button>
</view>